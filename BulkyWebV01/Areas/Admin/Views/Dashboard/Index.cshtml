@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="zen-admin-dashboard">
    <!-- Dashboard Header -->
    <div class="zen-admin-header">
        <div>
            <h1 class="zen-admin-title">Dashboard</h1>
            <p class="zen-admin-subtitle">Welcome back, Admin. Here's what's happening today.</p>
        </div>
        <div class="zen-admin-actions">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary zen-btn-sm">
                <i class="bi bi-plus-circle"></i> New Product
            </a>
        </div>
    </div>

    <!-- Contact Information Panel -->
    <div class="alert alert-info mb-4">
        <div class="row">
            <div class="col-md-12 mb-2">
                <h5 class="mb-3"><i class="bi bi-info-circle-fill"></i> Store Contact Information</h5>
            </div>
            <div class="col-md-4">
                <strong><i class="bi bi-telephone"></i> Phone:</strong> +20 106 213 7061
            </div>
            <div class="col-md-4">
                <strong><i class="bi bi-envelope"></i> Email:</strong> support@zenlocalbrand.shop
            </div>
            <div class="col-md-4">
                <strong><i class="bi bi-clock"></i> Delivery:</strong> 5-7 Business Days
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="zen-stats-grid">
        <div class="zen-stat-card zen-stat-card--primary">
            <div class="zen-stat-card__icon">
                <i class="bi bi-cart3"></i>
            </div>
            <div class="zen-stat-card__content">
                <p class="zen-stat-card__label">Total Orders</p>
                <h3 class="zen-stat-card__value">@ViewBag.TotalOrders</h3>
                <p class="zen-stat-card__trend">
                    <span class="zen-trend--up"><i class="bi bi-arrow-up"></i> 12%</span> from last month
                </p>
            </div>
        </div>

        <div class="zen-stat-card zen-stat-card--accent">
            <div class="zen-stat-card__icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <div class="zen-stat-card__content">
                <p class="zen-stat-card__label">Total Products</p>
                <h3 class="zen-stat-card__value">@ViewBag.TotalProducts</h3>
                <p class="zen-stat-card__trend">
                    <span class="zen-trend--neutral">Active in catalog</span>
                </p>
            </div>
        </div>

        <div class="zen-stat-card zen-stat-card--success">
            <div class="zen-stat-card__icon">
                <i class="bi bi-currency-dollar"></i>
            </div>
            <div class="zen-stat-card__content">
                <p class="zen-stat-card__label">Revenue</p>
                <h3 class="zen-stat-card__value">@ViewBag.TotalRevenue.ToString("N2") EGP</h3>
                <p class="zen-stat-card__trend">
                    <span class="zen-trend--up"><i class="bi bi-arrow-up"></i> 8%</span> from last month
                </p>
            </div>
        </div>

        <div class="zen-stat-card zen-stat-card--warning">
            <div class="zen-stat-card__icon">
                <i class="bi bi-people"></i>
            </div>
            <div class="zen-stat-card__content">
                <p class="zen-stat-card__label">Total Users</p>
                <h3 class="zen-stat-card__value">@ViewBag.TotalUsers</h3>
                <p class="zen-stat-card__trend">
                    <span class="zen-trend--up"><i class="bi bi-arrow-up"></i> 5%</span> new registrations
                </p>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Recent Orders -->
    <div class="zen-admin-grid">
        <!-- Quick Actions -->
        <div class="zen-admin-card">
            <div class="zen-admin-card__header">
                <h3>Quick Actions</h3>
            </div>
            <div class="zen-admin-card__body">
                <div class="zen-quick-actions">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="zen-quick-action">
                        <div class="zen-quick-action__icon zen-quick-action__icon--primary">
                            <i class="bi bi-box-seam"></i>
                        </div>
                        <div>
                            <h4>Add Product</h4>
                            <p>Create new product listing</p>
                        </div>
                    </a>

                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="zen-quick-action">
                        <div class="zen-quick-action__icon zen-quick-action__icon--accent">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div>
                            <h4>Pending Orders</h4>
                            <p>@ViewBag.PendingOrders orders waiting</p>
                        </div>
                    </a>

                    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="zen-quick-action">
                        <div class="zen-quick-action__icon zen-quick-action__icon--success">
                            <i class="bi bi-folder-plus"></i>
                        </div>
                        <div>
                            <h4>New Category</h4>
                            <p>Add product category</p>
                        </div>
                    </a>

                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="zen-quick-action">
                        <div class="zen-quick-action__icon zen-quick-action__icon--warning">
                            <i class="bi bi-people"></i>
                        </div>
                        <div>
                            <h4>Manage Users</h4>
                            <p>View all users & roles</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="zen-admin-card">
            <div class="zen-admin-card__header">
                <h3>Recent Orders</h3>
                <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="zen-card-link">View all <i class="bi bi-arrow-right"></i></a>
            </div>
            <div class="zen-admin-card__body">
                @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                {
                    <div class="zen-recent-orders">
                        @foreach (var order in ViewBag.RecentOrders)
                        {
                            <div class="zen-order-item">
                                <div class="zen-order-item__avatar">
                                    @order.ApplicationUser.Name.Substring(0, 1).ToUpper()
                                </div>
                                <div class="zen-order-item__details">
                                    <h4>@order.ApplicationUser.Name</h4>
                                    <p>Order #@order.Id â€¢ @order.OrderDate.ToString("MMM dd, yyyy")</p>
                                </div>
                                <div class="zen-order-item__status">
                                    <span class="zen-badge zen-badge--@(order.OrderStatus.ToLower())">
                                        @order.OrderStatus
                                    </span>
                                </div>
                                <div class="zen-order-item__amount">
                                    @order.OrderTotal.ToString("N2") EGP
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="zen-empty-state">
                        <i class="bi bi-inbox"></i>
                        <p>No recent orders</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animate stat cards on load
            const statCards = document.querySelectorAll('.zen-stat-card');
            statCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    setTimeout(() => {
                        card.style.transition = 'all 0.5s ease';
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                }, index * 100);
            });
        });
    </script>
}
