@page
@model SetSecretCodeModel
@{
    ViewData["Title"] = "Set Recovery Code";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-warning\" role=\"alert\">
            <strong>Important!</strong> Set your secret recovery code to enable password reset without email.
        </div>
        
        <form id="set-secret-code-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.SecretCode" class="form-control" autocomplete=\"off\" placeholder=\"Enter your secret code\" />
                <label asp-for="Input.SecretCode">Secret Recovery Code</label>
                <span asp-validation-for="Input.SecretCode" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmSecretCode" class="form-control" autocomplete=\"off\" placeholder=\"Confirm your secret code\" />
                <label asp-for="Input.ConfirmSecretCode">Confirm Secret Code</label>
                <span asp-validation-for="Input.ConfirmSecretCode" class="text-danger"></span>
            </div>
            
            <button type="submit" class="w-100 btn btn-lg btn-primary">Set Secret Code</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
