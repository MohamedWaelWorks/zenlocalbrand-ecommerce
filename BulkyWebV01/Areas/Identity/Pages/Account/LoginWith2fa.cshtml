@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 my-5">
                <div class="card-header bg-gradient-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <p class="text-muted">Enter the 6-digit code from your authenticator app</p>
                        <div class="my-3">
                            <img src="data:image/png;base64," alt="QR Code" class="img-fluid" style="max-width: 250px;">
                        </div>
                        <p class="text-muted small">Scan this QR code with your authenticator app if you haven't already</p>
                    </div>
                    
                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <input asp-for="RememberMe" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" placeholder="000000" maxlength="6" pattern="[0-9]{6}" autofocus />
                            <label asp-for="Input.TwoFactorCode">Authenticator Code</label>
                            <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMachine" class="form-check-input" />
                            <label asp-for="Input.RememberMachine" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMachine)
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Verify & Login</button>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a asp-page="./Login" class="text-decoration-none">Back to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}